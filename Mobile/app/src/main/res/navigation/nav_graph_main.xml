<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/loginOrRegisterFragment"
    >
    <fragment
        android:id="@+id/loginOrRegisterFragment"
        android:name="iss.nus.edu.sg.sa4106.kebunjio.LoginOrRegisterFragment">
        <action
            android:id="@+id/action_loginOrRegisterFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_loginOrRegisterFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="iss.nus.edu.sg.sa4106.kebunjio.RegisterAccountFragment">
        <action
            android:id="@+id/action_registerFragment_to_loginOrRegisterFragment"
            app:destination="@id/loginOrRegisterFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="iss.nus.edu.sg.sa4106.kebunjio.LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_loginOrRegisterFragment"
            app:destination="@id/loginOrRegisterFragment" />
        <action
            android:id="@+id/action_loginFragment_to_loggedInFragment"
            app:destination="@id/loggedInFragment" />
    </fragment>
    <fragment
        android:id="@+id/loggedInFragment"
        android:name="iss.nus.edu.sg.sa4106.kebunjio.LoggedInFragment">
        <action
            android:id="@+id/action_loggedInFragment_to_loginFragment"
            app:destination="@id/loginFragment" />

        <argument
            android:name="logged_user"
            app:argType="iss.nus.edu.sg.sa4106.kebunjio.data.User"
            />
        <argument
            android:name="session_cookie"
            app:argType="string"
            />
    </fragment>

</navigation>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.viewplantdetails.ChoosePlantToViewFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0A803D"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/plant_to_view_text"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Choose Plant to Add Reminder"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            />

        <ListView
            android:id="@+id/plant_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/plantToChooseText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose a Plant"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

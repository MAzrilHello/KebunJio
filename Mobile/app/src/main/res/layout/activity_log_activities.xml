<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".features.logactivities.LogActivitiesActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0A803D"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal" >
            <ImageButton
                android:id="@+id/back_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:padding="20dp"
                android:background="#0A803D"
                android:src="@drawable/arrow_left"
                />
            <TextView
                android:id="@+id/title_part"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Log Activities"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal" >
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="Plant: "
                android:textSize="20sp"
                android:textColor="@android:color/white"
                />
            <Spinner
                android:id="@+id/plant_spinner"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal" >
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="Activity Type: "
                android:textSize="20sp"
                android:textColor="@android:color/white"
                />
            <Spinner
                android:id="@+id/activity_type_spinner"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal" >
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="Activity Description: "
                android:textSize="20sp"
                android:textColor="@android:color/white"
                />
            <EditText
                android:id="@+id/activity_desc_text"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:hint="ex. watered 500ml"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal" >
            <TextView
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="Date and Time: "
                android:textSize="20sp"
                android:textColor="@android:color/white"
                />
            <TextView
                android:id="@+id/time_stamp_text"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:text="dd/mm/yyyy hh:mm"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="right">
            <Button
                android:id="@+id/change_date_btn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:text="Change Date" />
            <Button
                android:id="@+id/change_time_btn"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:text="Change Time" />
        </LinearLayout>
        <Button
            android:id="@+id/log_activities_btn"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:background="#024620"

            android:text="Log Activities" />
        <Button
            android:id="@+id/back_btn"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:text="Back" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>